# Environment Configuration
ENVIRONMENT=dev

# Base URLs
BASE_URL=https://example.com
API_BASE_URL=https://api.example.com

# Timeout Settings (in milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000
ACTION_TIMEOUT=15000

# Browser Settings
HEADLESS=false
BROWSER=chromium
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Test Settings
PARALLEL_WORKERS=4
RETRIES=1
SLOW_MO=0

# Global Setup/Teardown
RUN_GLOBAL_SETUP=true
RUN_GLOBAL_TEARDOWN=true

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Screenshots
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_ON_SUCCESS=false

# Video Recording
VIDEO_ON_FAILURE=retain-on-failure

# API Settings
API_TIMEOUT=30000
API_MAX_RETRIES=3

# Authentication (if needed)
# TEST_USERNAME=test@example.com
# TEST_PASSWORD=password123
# API_KEY=your-api-key
# AUTH_TOKEN=your-auth-token

# ============================================
# EMAIL REPORTING CONFIGURATION
# ============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email Settings
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient1@example.com,recipient2@example.com
EMAIL_CC=
EMAIL_BCC=
EMAIL_SUBJECT_PREFIX=[Automation]

# Report Configuration
PROJECT_NAME=Playwright Test Framework
TEST_ENV=QA
REPORT_JSON_PATH=./reports/test-results.json
SCREENSHOT_BASE_DIR=./test-results
ATTACH_SCREENSHOTS=true
MAX_SCREENSHOT_ATTACHMENTS=10

# Error Handling
FAIL_ON_PARSE_ERROR=true
FAIL_ON_TEST_FAILURE=false
INCLUDE_STACK_TRACES=true
MAX_ERROR_LENGTH=500
TOP_SLOWEST_TESTS=5
TIMEZONE=UTC
